generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        String   @id @default(uuid())
  username  String
  nickname  String?
  email     String   @unique
  password  String
  image_url String?
  servers   Server[]
}

model Server {
  id             String   @id @default(cuid())
  server_role    String
  invite_code    String?
  admin_id       String
  member         Member[]
  memberId       String
  voice_channels Json[]
  text_channels  Json[]
}
